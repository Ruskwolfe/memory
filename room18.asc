// room script file

function oDoorbed_Look()
{
cEgo.Walk(90, 260, eBlock, eWalkableAreas);
cEgo.FaceDirection(eDirectionLeft);
Display("Ahhhh your door, finally a door worth looking for.");
}

function oDoorbed_Interact()
{
cEgo.Walk(90, 260, eBlock, eWalkableAreas);
cEgo.FaceDirection(eDirectionLeft);
Display("This is your door, you need not touch it like some neanderthal, just walk and it will open");
}

function oDoorbed_Talk()
{
cEgo.Walk(90, 260, eBlock, eWalkableAreas);
cEgo.FaceDirection(eDirectionLeft);
cEgo.Say("Here I am... talking to my door... like a twat.");
}

function hExitmesshall_WalkOn()
{
cEgo.ChangeRoom(26, 275, 275);
}

function hExitmesshall_Interact()
{
cEgo.Walk(160, 160, eBlock, eWalkableAreas);
cEgo.ChangeRoom(26, 275, 275);
}
