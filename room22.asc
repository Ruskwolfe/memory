function room_RepExec()
{
  if (Mech12 == 0)
  {
  if (IsTimerExpired(3)) {
   int Mech1 = Random(6);
    if (Mech1 == 0)
    CMechanicus.SayBackground("Damn this infernal machine !");
  else if (Mech1 == 1)
    CMechanicus.Animate(0, 5, eOnce, eNoBlock);
  else if (Mech1 == 2)
    CMechanicus.SayBackground("*Mechanical Whirr*");
      else if (Mech1 == 3)
    CMechanicus.Animate(2, 5, eOnce, eNoBlock);
  else if (Mech1 == 4)
    CMechanicus.SayBackground("By the omnisire, this is bullshit!");
      else if (Mech1 == 5)
    CMechanicus.SayBackground("Why can't there be an if statement there !?");
  else if (Mech1 == 6)
    CMechanicus.SayBackground("What do you mean unexpected parse error !?");
    SetTimer(3, GetGameSpeed() * 10);  // ten seconds delay
  }
}
}
