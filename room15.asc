function oBucket_Interact()
{
cEgo.Walk(208, 191, eBlock);
cEgo.FaceDirection(eDirectionUp);
cEgo.LockView(3);
cEgo.Animate(3, 5);
Wait(25);
Display("You picked up a metal Bucket");
oBucket.Visible=false;
cEgo.AddInventory(iBucket);
cEgo.Animate(2, 4);
cEgo.LockView(2);
}

function oBucket_Look()
{
Display("You think you saw the janitor onboard the ship use one of these once, you are not sure what it is used for.");
}

function oBucket_Talk()
{
cEgo.Walk(208, 191, eBlock);
cEgo.FaceDirection(eDirectionUp);
cEgo.LockView(3);
cEgo.Animate(3, 5);
cEgo.Say("Echo.....");
Wait(10);
cEgo.Animate(2, 4);
cEgo.LockView(2);
cEgo.Say("Nah, it's not big enough to echo.");
}


